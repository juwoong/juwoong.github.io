---
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt?: string;
  caption?: string;
}

const { src, alt = "", caption } = Astro.props;
---

<figure class="figure">
  <Image src={src} alt={alt || caption || ""} />
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .figure {
    margin: 1.5em 0;
    text-align: center;
  }

  .figure :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .figure figcaption {
    margin-top: 0.5em;
    font-size: 0.9em;
    color: rgb(var(--gray));
  }
</style>
