---
interface Props {
  gap?: string;
}

const { gap = "0.5rem" } = Astro.props;
---

<div class="image-row" style={`gap: ${gap}`}>
  <slot />
</div>

<style>
  .image-row {
    display: flex;
    align-items: flex-start;
    width: 100%;
    margin: 1.5em 0;
  }

  .image-row :global(.figure) {
    flex: 1;
    min-width: 0;
    margin: 0;
  }
</style>
